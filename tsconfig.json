{
  "version": "2.7.1",

  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "declaration": false,
    "downlevelIteration": true,
    "importHelpers": true,
    "removeComments": false,

    "strictNullChecks": true,
    "noImplicitUseStrict": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": false,

    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "checkJs": false,

    "baseUrl": ".",

    "lib": [
      "dom",
      "es2015"
    ],
    
    "plugins": [
    ],

    "paths": {
      "dgame": [
        "client/dgame"
      ],
      "wsrelay": [
        "client/wsrelay"
      ]
    }
  },

  "include": [
    "client/**/*.ts",
    "client/**/*.tsx",
    "examples/**/*.ts",
    "examples/**/*.tsx"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "client/**/test/*.ts",
    "client/**/test/*.tsx",
    "examples/**/test/*.ts",
    "examples/**/test/*.tsx"
  ]
}
